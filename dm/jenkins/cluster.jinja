{% set NAME_PREFIX = env['deployment'] + '-' + env['name'] %}
{% set CLUSTER_NAME = NAME_PREFIX %}
{% set TYPE_NAME = NAME_PREFIX + '-type' %}
{% set PASSWORD = properties['password'] %}

resources:
- name: {{ CLUSTER_NAME }}
  type: container.v1.cluster
  properties:
    zone: {{ properties['zone'] }}
    cluster:
      name: {{ CLUSTER_NAME }}
      initialNodeCount: {{ properties['numNodes'] }}
      nodeConfig:
        oauthScopes:
        - https://www.googleapis.com/auth/projecthosting
        - https://www.googleapis.com/auth/compute
        - https://www.googleapis.com/auth/devstorage.read_write
        - https://www.googleapis.com/auth/logging.write
        - https://www.googleapis.com/auth/monitoring
      masterAuth:
        username: {{ properties['username'] }}
        password: {{ PASSWORD }}

- name: {{ TYPE_NAME }}
  type: deploymentmanager.alpha.type
  properties:
    configurableService:
      descriptorUrl: https://$(ref.{{ CLUSTER_NAME }}.endpoint)/swaggerapi/api/v1
      credential:
        basicAuth:
          user: $(ref.{{ CLUSTER_NAME }}.masterAuth.username)
          password: $(ref.{{ CLUSTER_NAME }}.masterAuth.password)

- name: {{ TYPE_NAME }}-extensions
  type: deploymentmanager.alpha.type
  properties:
    configurableService:
      descriptorUrl: https://$(ref.{{ CLUSTER_NAME }}.endpoint)/swaggerapi/apis/extensions/v1beta1
      credential:
        basicAuth:
          user: $(ref.{{ CLUSTER_NAME }}.masterAuth.username)
          password: $(ref.{{ CLUSTER_NAME }}.masterAuth.password)

outputs:
- name: zone
  value: {{ properties['zone'] }}
- name: typeName
  value: {{ TYPE_NAME }}
- name: password
  value: {{ PASSWORD }}
